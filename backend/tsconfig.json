{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/routes/alarms.ts",
    "src/routes/clients.ts",
    "src/routes/measurements.ts",
    "src/routes/readings.ts",
    "src/routes/reports.ts",
    "src/routes/auth.ts",
    "src/routes/devices.ts",
    "src/scripts/create-client.ts",
    "src/scripts/device-simulator.ts",
    "src/scripts/generate-device-keys.ts",
    "src/scripts/setup-admin.ts"
  ]
}
